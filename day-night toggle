<--css-->

*{
    margin: 0;
    padding: 0;
}

.container{
    height: 100vh;
    width: 100%;
    margin: 0 auto;
    background-color: #ffe082;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: 0.45s;
}

.switch{
    position: relative;
    display: inline-block;
    width: 100px;
    height: 100px;
}

.slider{
    position:absolute;
    cursor: pointer;
    top:0;
    left:0;
    bottom:0;
    right:0;
    background-color: #ffecb3;
    transition: 0.4s;
}

.slider::before{
    position: absolute;
    content: '';
    height: 40px;
    width: 40px;
    transition: 0.4s;
}

input:checked + .slider{
    background-color: #323e52
}

input:focus + .slider{
    box-shadow: 0 0 0 #2196f3;
}

input:checked + .slider:before{
    transform: translateX(60px);
}

.slider.round{
    border-radius:34px;
}

.slider.round:before{
    border-radius: 50%;
}

input + .slider.round:before{
    font-size: 25px;
    background: transparent;
    content: "sun";
    display: flex;
    justify-content: center;
    align-items: center;
}

input:checked + .slider.round:before{
    font-size: 25px;
    background: transparent;
    content: "moon";
    display: flex;
    justify-content: center;
    align-items: center;
}

.dark{
    background-color: darkslategray;

}

.light{
    background-color:#ffe082;
}

@keyframes rot {
    0%{
        transform: rotate(0deg);
    }

    25%{
        transform: rotate(90deg);
        transform: translateX(60px);
    }
    
}

<--js-->

let body = document.querySelector(".container");
let toggle = document.getElementById("toggle")

toggle.addEventListener('click', e=> {
    if(toggle.checked){
        body.classList.add('dark')}
        else{
            body.classList.remove('dark')
        }
    }
);
