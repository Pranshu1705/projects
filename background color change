    <button onclick = "display()">ckick me to change background</button>

    <script>
        function display(){

            var bgcolor = new Array("#029FD4" , "#1EFF00" , "#CDD3CE" , "F9F8F8" )
            
            document.body.style.background = bgcolor[Math.floor(Math.random()*bgcolor.length)]
            
        }
    </script>
   
